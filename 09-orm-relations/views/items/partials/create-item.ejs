<form action="/items/store" method="post">
    <div class="form-group">
        <label class="form-group__label" for="title">title</label>
        <input
            class="form-group__input"
            type="text"
            id="title"
            name="title"
            placeholder="title"
        />
    </div>

    <div class="form-group">
        <label class="form-group__label" for="image">image</label>
        <input
            class="form-group__input"
            type="text"
            id="image"
            name="image"
            placeholder="image"
        />
    </div>

    <div class="form-group">
        <label class="form-group__label" for="image">location</label>
        <select class="form-group__select" name="location">
            <% locations.forEach(location => { %>

                <option value="<%= location.id %>"><%= location.title %></option>

            <% }) %>
        </select>
    </div>

    <input class="form-button" type="submit" value="Создать" />
</form>
