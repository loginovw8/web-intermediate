<%- include('particles/header.ejs') %>

<%- include('particles/navigation.ejs') %>

<div class="section">
    <h2 class="section__title">
        <%= item.title %>
    </h2>
    <img class="section__image" src="/img/<%= item.image %>">
    <p>Категория: </p>
    <p>Кол-во комментариев: </p>
    <p>Средняя оценка: </p>
</div>

<form action="/comment" method="post">
    <div class="form-group">
        <label class="form-group__label" for="date">Дата посещения</label>
        <input class="form-group__input" type="date" id="date" name="date">
    </div>

    <div class="form-group">
        <label class="form-group__label" for="mark">Оценка</label>
        <input class="form-group__input" type="number" id="mark" name="mark">
    </div>

    <div class="form-group">
        <label class="form-group__label" for="comment">Коммент</label>
        <textarea class="form-group__input" id="comment" name="comment" placeholder="Ваш комментарий"></textarea>
    </div>

    <input class="form-button" type="submit" value="Комментировать">
</form>

<div>
    <h2>Комментарии</h2>    
</div>

<%- include('particles/footer.ejs') %>